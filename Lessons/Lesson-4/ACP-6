temperature=int(input("Enter the temperature(celcius):"))
if temperature>=28:
    print("It is hot.You can wear light clothes.")
elif temperature>=15 and temperature<28:
    print("It is warm.You can wear normal clothes.")
elif temperature>=10 and temperature<15:
    print("It is cool.You can wear slightly heavy clothes.")
elif temperature>=5 and temperature<10:
    print("It is chilly.You can wear nearly heavy clothes")
elif temperature>=0 and temperature<5:
    print("It is cold.You can wear heavy clothes")
else:
    print("It is freezing.You can wear thick clothes")
